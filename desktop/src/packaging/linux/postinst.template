#!/bin/sh
set -e


# Update desktop database
# This ensures the system recognizes the newly installed .desktop files.
cp /opt/cognotik/lib/cognotik-Cognotik.desktop /usr/share/applications
update-desktop-database /usr/share/applications || true

# Create /usr/local/bin if it doesn't exist
mkdir -p /usr/local/bin
# Create symlink for the executable
# This makes 'cognotik' available in the system PATH.
ln -sf /opt/cognotik/bin/Cognotik /usr/local/bin/cognotik

exit 0